<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="layout">
	<StackPane>
		<Canvas fx:id="cvs1" />
		<Canvas fx:id="cvs2" />
		<Canvas fx:id="cvs3" />
	</StackPane>
	<BorderPane fx:id="borderPane">
		<top>
			<MenuBar/>
		</top>
		<left>
			<ImageView fx:id="left_wall" preserveRatio="true" smooth="true">
	        	<image>
		      		<Image url="res/side_wall.png"/>
		        </image>
		    </ImageView>
		</left>
		<right>
			<ImageView fx:id="right_wall" preserveRatio="true" smooth="true" rotate="180">
	        	<image>
		      		<Image url="res/side_wall.png" />
		        </image>
		    </ImageView>
		</right>
	</BorderPane>
</StackPane>

